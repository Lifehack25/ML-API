{
  "name": "ml-api",
  "version": "0.1.0",
  "description": "Memory Locks edge-native API powered by Hono and Cloudflare Workers.",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "build": "wrangler deploy src/index.ts --dry-run --outdir dist",
    "deploy": "wrangler deploy src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "db:generate": "drizzle-kit generate",
    "db:check": "drizzle-kit check"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "hashids": "^2.3.0",
    "hono": "^4.3.6",
    "jose": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260228.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.67.0"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "minimatch": "^10.2.1"
  }
}