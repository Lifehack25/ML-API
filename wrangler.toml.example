name = "ml-api"
main = "src/index.ts"
compatibility_date = "2024-10-01"
workers_dev = true

[observability]
enabled = false
head_sampling_rate = 1

[observability.logs]
enabled = true
head_sampling_rate = 1
persist = true
invocation_logs = true

[observability.traces]
enabled = true
persist = true
head_sampling_rate = 1

[vars]
# Replace with your actual Apple Bundle ID
APPLE_BUNDLE_ID = "com.yourdomain.appname"

[[d1_databases]]
binding = "DB"
database_name = "ml-api-db"
database_id = "YOUR_D1_DATABASE_ID"

[[kv_namespaces]]
binding = "IDEMPOTENCY_KEYS"
id = "YOUR_KV_NAMESPACE_ID"

[images]
binding = "IMAGES"

# Cron triggers for background jobs
[triggers]
crons = [
  "0 */12 * * *", # Every 12 hours: process Cloudflare cleanup jobs
]

# Workers Assets for serving web album static files
[assets]
directory = "./web-album"
binding = "ASSETS"
# Exclude index.html from automatic serving.
html_handling = "none"

# Routes configuration
# [[routes]]
# pattern = "api.yourdomain.com/*"
# zone_name = "yourdomain.com"
